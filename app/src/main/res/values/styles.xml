<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ConnectToolbarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:maxHeight">@dimen/abc_action_bar_default_height_material</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <!-- No need for colorPrimary, colorPrimaryDark, colorAccent here these should go to the AppTheme -->
    </style>

    <style name="DefaultTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_extra_large</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="DefaultBoldTextStyle" parent="DefaultTextStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:background">@null</item>
        <item name="android:cursorVisible">true</item>
    </style>
</resources>
